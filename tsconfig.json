{
    "compilerOptions": {
        "baseUrl": "./src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["dom", "es2017"],
        "module": "commonjs",
        "noEmitOnError": false,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "target": "es5"
    },
    "paths": {
        "game/*": ["src/game/*"],
        "actors/*": ["src/game/actors/*"],
        "modules/*": ["src/game/modules/*"],
        "common/*": ["src/common/*"],
        "index/*": ["./src"],
        "engine": ["./src/engine"]
    },
    "typeRoots": ["./node_modules/@types"],
    "exclude": ["node_modules", "*.spec.ts"],
    "awesomeTypescriptLoaderOptions": {
        "transpileOnly": true
    }
}
