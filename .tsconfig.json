{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["dom", "es2017"],
        "module": "commonjs",
        "noEmitOnError": false,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "target": "es5"
    },
    "paths": {
        "game/*": ["src/game/*"],
        "actors/*": ["src/actors/*"],
        "common/*": ["src/common/*"]
    },
    "typeRoots": [
        "./node_modules/@types",
        "./node_modules/phaser-ce/typescript/"
    ],
    "files": [
        "src/server/server.ts",
        "src/shared/events.model.ts",
        "src/shared/models.ts",
        "main.ts"
    ],
    "exclude": ["node_modules", "*.spec.ts"],
    "awesomeTypescriptLoaderOptions": {
        "transpileOnly": true
    }
}
