{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["dom", "es2017"],
        "module": "commonjs",
        "noEmitOnError": false,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "target": "es5"
    },
    "paths": {
        "client/*": ["src/client/*"],
        "server/*": ["src/server/*"],
        "shared/*": ["src/shared/*"]
    },
    "typeRoots": [
        "./node_modules/@types",
        "./node_modules/phaser-ce/typescript/"
    ],
    "files": [
        "src/server/server.ts",
        "src/shared/events.model.ts",
        "src/shared/models.ts",
        "main.ts"
    ],
    "exclude": ["node_modules", "*.spec.ts"],
    "awesomeTypescriptLoaderOptions": {
        "transpileOnly": true
    }
}
